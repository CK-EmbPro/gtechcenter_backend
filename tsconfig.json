{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true, //Compiles the es modules to commonjs modules
    "forceConsistentCasingInFileNames": true, //case-sensitivity
    "skipLibCheck": true
  },
  "include": ["./**/*"]
}
